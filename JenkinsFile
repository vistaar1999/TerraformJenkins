properties([parameters([choice(choices: ['', 'init', 'plan', 'apply'], description: 'Choose the terraform options', name: 'TerraformOptions')])])

pipeline{
  agent any
tools {
  terraform 'Terraform'
}
  stages{
   stage('Git Checkout'){
      steps{
        echo "Checking out from the branch"
        git branch: 'main', changelog: false, credentialsId: 'a77b18a5-7558-4a34-8338-a31ceb2babe9', poll: false, url: 'https://github.com/vistaar1999/TerraformJenkins'
  }
}
   stage("Terraform Init"){
      steps{
        if ( params.TerraformOptions == 'init')
        bat "terraform init"
}
}
}
}
