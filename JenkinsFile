properties([parameters([choice(choices: ['', 'init','apply','destroy'], description: 'Choose the terraform options', name: 'RUN_TYPE')])])

pipeline{
  agent any
tools {
  terraform 'Terraform'
}
  stages{
   stage('Git Checkout'){
      steps{
        echo "Checking out from the branch"
        git branch: 'main', changelog: false, credentialsId: 'a77b18a5-7558-4a34-8338-a31ceb2babe9', poll: false, url: 'https://github.com/vistaar1999/TerraformJenkins'
  }
}
   stage("Terraform Plan"){
      steps{
           bat "terraform init"
        script{
          if ( params.RUN_TYPE == 'plan') {
            bat "terraform plan"
    }
          else if ( params.RUN_TYPE == 'apply') {
            bat "terraform apply --auto-approve"
    }
          else if ( params.RUN_TYPE == 'destroy') {
            bat "terraform destroy --auto-approve"
    }  
          else {
            echo "Select a correct option"
     }
  }
}
}
}
}
